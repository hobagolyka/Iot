<% include header %>
<% include sidebar %>

<!-- Main Content -->
<div class="container-fluid">
    <div class="side-body">
        <h1><span class="glyphicon glyphicon-search"></span> Keresési találatok</h1>
        <% if((talalatok.length == 0) || (typeof talalatok == 'undefined')) {%>
        <div class="alert alert-warning">
            <strong>Figyelem!</strong> Nincs találat.
        </div>
        <% } %>

        <table class="table">
            <thead>
            <th>NAME</th>
            <th>TYPE</th>
            <th>IP</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            </thead>
            <tbody>
            <!-- lapozó méret beállítása itt: -->
            <% var lapozo = 100; %>
            <% for(var i = ((page - 1) * lapozo); i < (page * lapozo) && (i < talalatok.length) ; i++) {%>
            <tr <% if(!talalatok[i].STATUS) {%> class="status" <% }%>>
                <td><%= talalatok[i].NAME %></td>
                <td><%= talalatok[i].TYPE %></td>
                <td><%= talalatok[i].IP %></td>
                <td><div class="clock"></div></td>
                <td align="right"><!--<a href="detail/<%= /*talalatok[i].ID */%>" class="btn btn-default detailbtn">Részletek </a>-->
                    <a href="#" class="btn btn-default detailbtn megerosites"><span class="glyphicon glyphicon-signal" aria-hidden="true"></span></a>
                    <a href="\edit\<%= talalatok[i].ID %>" class="btn btn-default detailbtn"><span class="glyphicon glyphicon-edit"></span></a>
                    <a href="\delete\<%= talalatok[i].ID %>" class="btn btn-danger detailbtn megerosites"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </td>

            </tr>

            <% } %>
            </tbody>
        </table>
        <ul class="pager">
            <li><a style="<% if (page == 1) { %> display:none; <% } %>" href="/devices/<%= parseInt(page) - 1 %>"><%= parseInt(page) - 1 %>. oldal</a></li>
            <li><a style="<% if (Math.ceil(talalatok.length / lapozo) == page) { %> display:none; <% } %>" href="/devices/<%= parseInt(page) + 1 %>"><%= parseInt(page) + 1  %>. oldal</a></li>
        </ul> </div>
    </div>
</div>
</div>
<% include footer %>


