<% include header %>
<% include sidebar %>

<!-- Main Content -->
<div class="container-fluid">
    <div class="side-body">
        <h1><span class="glyphicon glyphicon-ok"></span> Aktív eszközök <span class="number_active"><%= actives.length %></span></h1>

            <% if((actives.length == 0) || (typeof actives == 'undefined')) {%>
        <div class="alert alert-warning">
            <strong>Figyelem!</strong> Nincs találat.
        </div>
        <% } %>

        <table class="table table-striped">
            <thead>
            <th>NAME</th>
            <th>TYPE</th>
            <th>IP</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            </thead>
            <tbody>
            <!-- lapozó méret beállítása itt: -->
            <% var lapozo = 100; var ppage = 1; %>
            <% for(var i = ((ppage - 1) * lapozo); i < (ppage * lapozo) && (i < actives.length) ; i++) {%>
            <tr <% if(!actives[i].STATUS) {%> class="status" <% }%>>
                <td><%= actives[i].NAME %></td>
                <td><%= actives[i].TYPE %></td>
                <td><%= actives[i].IP %></td>
                <td><div class="clock"></div></td>
                <td align="right"><!--<a href="detail/<%= /*actives[i].ID */%>" class="btn btn-default detailbtn">Részletek </a>-->
                    <a href="#" class="btn btn-default detailbtn megerosites"><span class="glyphicon glyphicon-signal" aria-hidden="true"></span></a>
                    <a href="\edit\<%= actives[i].ID %>" class="btn btn-default detailbtn"><span class="glyphicon glyphicon-edit"></span></a>
                    <a href="\delete\<%= actives[i].ID %>" class="btn btn-danger detailbtn megerosites"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </td>

            </tr>

            <% } %>
            </tbody>
        </table>
        <!--
        <ul class="pager">
            <li><a style="<% if (page == 1) { %> display:none; <% } %>" href="/devices/<%= parseInt(page) - 1 %>"><%= parseInt(page) - 1 %>. oldal</a></li>
            <li><a style="<% if (Math.ceil(actives.length / lapozo) == page) { %> display:none; <% } %>" href="/devices/<%= parseInt(page) + 1 %>"><%= parseInt(page) + 1  %>. oldal</a></li>
        </ul> </div>
        -->
    </div>
</div>
</div>
<% include footer %>


